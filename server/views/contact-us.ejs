<div
  class="container p-5"
  style="
    margin: 35px;
    border: 2px solid rgb(241, 202, 11);
    border-left: 2px solid rgb(241, 202, 11);
    border-right: 2px solid rgb(241, 202, 11);
    box-shadow: 0px 0px 15px 0px rgb(241, 202, 11);
  "
>
  <h1 class="text-center mb-5" style="color: rgb(241, 202, 11)">Contact Us</h1>
  <div class="row">
    <div class="col-md-6">
      <h4 style="color: rgb(241, 202, 11)">Get in Touch</h4>
      <p style="color: white">
        Fill out the form below to get in touch with us. We'll get back to you
        as soon as possible.
      </p>
      <form>
        <div class="form-group">
          <label for="name" style="color: white">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            placeholder="Enter your name"
          />
        </div>
        <div class="form-group">
          <label for="email" style="color: white">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            placeholder="Enter your email"
          />
        </div>
        <div class="form-group">
          <label for="message" style="color: white">Message</label>
          <textarea
            class="form-control"
            id="message"
            rows="5"
            placeholder="Enter your message"
          ></textarea>
        </div>
        <button
          type="submit"
          class="btn btn-primary"
          style="background-color: rgb(241, 202, 11)"
          id="submit-btn"
        >
          Submit
        </button>
      </form>
      <div
        id="popup-message"
        style="display: none; color: white; padding: 5px; margin: 10px"
      >
        Thank you for contacting us. We will get back to you soon.
      </div>
    </div>
    <div class="col-md-6">
      <h4 style="color: rgb(241, 202, 11)">Contact Information</h4>
      <p style="color: white">
        Feel free to contact us using the information below:
      </p>
      <ul class="list-unstyled" style="color: white">
        <li>
          <i class="fas fa-map-marker-alt"></i> 205 Humber College Blvd,
          Etobicoke, ON M9W 6V3
        </li>
        <li><i class="fas fa-envelope"></i> contact@davosbet.com</li>
        <li><i class="fas fa-phone"></i> (416) 555-1234</li>
      </ul>

      <h4 class="text-warning mt-5">Follow Us</h4>
      <p style="color: white">
        Stay up to date with our latest news and updates by following us on
        social media:
      </p>
      <ul class="list-inline">
        <li class="list-inline-item">
          <a href="https://facebook.com" target="_blank"
            ><i class="fab fa-facebook" style="color: white"></i
          ></a>
        </li>
        <li class="list-inline-item">
          <a href="https://twitter.com" target="_blank"
            ><i class="fab fa-twitter" style="color: white"></i
          ></a>
        </li>
        <li class="list-inline-item">
          <a href="https://instagram.com" target="_blank"
            ><i class="fab fa-instagram" style="color: white"></i
          ></a>
        </li>
        <li class="list-inline-item">
          <a href="https://linkedin.com" target="_blank"
            ><i class="fab fa-linkedin" style="color: white"></i
          ></a>
        </li>
      </ul>

      <h4 class="text-warning mt-5">Get in Touch</h4>
      <p style="color: white">
        Fill out the form below to get in touch with us. We'll get back to you
        as soon as possible.
      </p>
      <form class="w-50">
        <div class="form-group">
          <label for="name" style="color: white">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            placeholder="Enter your name"
            required
          />
        </div>
        <div class="form-group">
          <label for="email" style="color: white">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            placeholder="Enter your email"
            required
          />
        </div>
        <div class="form-group">
          <label for="message" style="color: white">Message</label>
          <textarea
            class="form-control"
            id="message"
            rows="5"
            placeholder="Enter your message"
            required
          ></textarea>
        </div>
        <button
          type="submit"
          class="btn btn-warning float-right"
          id="submit-btn"
        >
          Submit
        </button>
      </form>
      <div
        id="popup-message"
        style="display: none; color: white; padding: 5px; margin: 10px"
      >
        Thank you for contacting us. We will get back to you soon.
      </div>
    </div>

    <script>
      const form = document.querySelector("form");
      const submitBtn = document.querySelector("#submit-btn");
      const popupMessage = document.querySelector("#popup-message");
      let timeoutId;

      form.addEventListener("submit", (event) => {
        event.preventDefault();
        const nameInput = document.querySelector("#name");
        const emailInput = document.querySelector("#email");
        const messageInput = document.querySelector("#message");
        if (
          nameInput.value === "" ||
          emailInput.value === "" ||
          messageInput.value === ""
        ) {
          alert("Please enter all required fields.");
          return;
        }
        popupMessage.style.display = "block";
        form.reset();
        if (timeoutId) {
          clearTimeout(timeoutId);
        }
        timeoutId = setTimeout(() => {
          popupMessage.style.display = "none";
        }, 5000);
      });
    </script>
  </div>
</div>
